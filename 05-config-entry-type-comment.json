{
  "entry_type_name": "comment",
  "first_field_name": "comment_content",
  "commands": [{
    "command": "xdotool search \"{windowtitle}\" windowactivate",
    "timeout": 500,
    "comment": "This makes the proper terminal window active"
  },{
    "command": "xdotool type \"hc scaffold entry-type\" && xdotool key Return",
    "timeout": 1000,
    "comment": "starts to scaffold the entry-type"
  },{
    "command": "xdotool type \"{entry_type_name}\" && xdotool key Return",
    "timeout": 1000,
    "comment": "sets the entry-type name"
  },{
    "command": "xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 1: choose String type"
  },{
    "command": "xdotool type \"{first_field_name}\" && xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 1: type field name"
  },{
    "command": "xdotool type \"y\"",
    "timeout": 1000,
    "comment": "FIELD 1: it should be visible in the UI"
  },{
    "command": "xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 1: TextArea ui input type"
  },{
    "command": "xdotool type \"y\"",
    "timeout": 1000,
    "comment": "yes more fields"
  },{
    "command": "xdotool key Down && xdotool key Down && xdotool key Down && xdotool key Down && xdotool key Down && xdotool key Down && xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 2: choose ActionHash type"
  },{
    "command": "xdotool type \"y\"",
    "timeout": 1000,
    "comment": "FIELD 2: a link should be created"
  },{
    "command": "xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 2: choose Post"
  },{
    "command": "xdotool key Return",
    "timeout": 1000,
    "comment": "FIELD 2: choose the default field name"
  },{
    "command": "xdotool type \"n\"",
    "timeout": 1000,
    "comment": "no more fields"
  },{
    "command": "xdotool key space",
    "timeout": 1000,
    "comment": "press Space to deselect Update"
  },{
    "command": "xdotool key Return",
    "timeout": 1000,
    "comment": "Enter to select the current options (Delete only)"
  }]
}